<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="181*"></RowDefinition>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="32"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox x:Name="textBox" Margin="2,2,2,2" TextWrapping="Wrap" Text=""  AcceptsReturn="True"/>
        <Button x:Name="btShops" Content="Sklepy" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="2" VerticalAlignment="Center" Width="58" Click="btShops_Click"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="63*"/>
                <ColumnDefinition Width="137*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Serwer:" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center"/>
            <TextBox x:Name="tbServer" Grid.Column="1" HorizontalAlignment="Stretch" Margin="10,0,10,0" TextWrapping="Wrap" Text="127.0.0.1:1666" VerticalAlignment="Center" />
        </Grid>
    </Grid>
</Window>
